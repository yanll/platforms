<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanll.business.auth.dao.UserBeanMapper">
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
    <select id="selectUser" resultType="UserBean">
        select id, username, nickname from m_user where username = #{username} and password = #{password} and enabled != 0
    </select>
    <select id="selectUsers" resultType="UserBean">
        select * from m_user
    </select>
    <insert id="batchInsert" parameterType="java.util.List">
        insert into m_user(username,password,nickname)values
        <foreach collection="list" item="user" separator=",">
            (#{user.username},#{user.password},#{user.nickname})
        </foreach>
    </insert>
</mapper>